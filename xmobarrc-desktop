Config
  { font =         "xft:Droid Sans Mono:size=9:bold:antialias=true"
  , position = Top
  , commands = [ Run Date "%a • %_d.%m.%Y • %H:%M:%S" "theDate" 10
                -- weather monitor
               , Run Weather "LSZH" [ "--template", "<skyCondition> | <fc=#4682B4><tempC></fc>°C"] 36000
               , Run MultiCpu
                  [] 10
               , Run Memory
                  [ "-t", "Mem: <usedratio>%"
                  , "-h", "red"
                  , "-l", "green"
                  ] 20
               -- keyboard layout indicator
               , Run Kbd  [ ("us(colemak)" , "EN")
                          , ("ru"          , "RU")
                            ]
               , Run UnsafeStdinReader ]
  , template = "%UnsafeStdinReader% }{<action=`gnome-terminal -- htop`>%multicpu% | %memory%</action> | %LSZH% | %kbd% | %theDate%"
  }
